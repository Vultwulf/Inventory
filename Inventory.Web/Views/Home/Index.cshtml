@{
    ViewBag.Title = "Index";
}

<div class="wrapper" data-bind="foreach: productList">
    <div class="thumbnail">
        <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
        <div class="caption">
            <h4 class="group inner list-group-item-heading" data-bind="text: name"></h4>
            <p class="group inner list-group-item-text" data-bind="text: description"></p>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <p class="lead"><span data-bind="text: $parent.formatCurrency(price)"></span>, <span data-bind="text: quantity"></span> available</p>
                </div>
                <button type="button" data-bind="click: $parent.selectProduct" class="btn btn-primary" data-toggle="modal" data-target="#orderModal">
                    Order Product
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="orderForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="orderModalLabel">Place Your Order</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="productName">Product Name</label>
                        <input type="text" class="form-control" id="productName" aria-describedby="productName" data-bind="value: selectedProduct().name" readonly>
                    </div>
                    <div class="form-group">
                        <label for="fullName">Full Name</label>
                        <input type="text" class="form-control" id="fullName" aria-describedby="fullName" data-bind="value: fullName" placeholder="Enter Full Name" required>
                    </div>
                    <div class="form-group">
                        <label for="creditCardNumber">Credit Card Number</label>
                        <input type="number" class="form-control" id="creditCardNumber" aria-describedby="creditCardNumber" data-bind="value: creditCardNumber" placeholder="Enter Credit Card Number" required>
                    </div>
                    <span />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" data-bind="click: purchase">Place Order</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="successModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i class="material-icons">&#xE876;</i>
                </div>
                <h4 class="modal-title">Purchase Successful</h4>
            </div>
            <div class="modal-body">
                <p class="text-center">Your order has been placed, and should arive within 3-5 days.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btn-block" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<div id="errorModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i class="material-icons">
                        error
                    </i>
                </div>
                <h4 class="modal-title">Purchase Unsuccessful</h4>
            </div>
            <div class="modal-body">
                <p class="text-center" data-bind="text: purchaseError"></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success btn-block" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
<div class="loader"></div>